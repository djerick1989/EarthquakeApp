<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:padding="@dimen/fab_margin">

    <ImageView
        android:id="@+id/indicator"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/green_circle"
        android:drawingCacheQuality="auto"
        android:scaleType="fitXY"
        />

    <TextView
        android:id="@+id/magnitude"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/indicator"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/txt_magnitude"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/magnitude"
        android:text="@string/str_magnitude"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:layout_alignLeft="@+id/indicator"
        android:layout_below="@id/indicator"
        android:gravity="center_vertical"
        android:drawableRight="@drawable/ic_location_on_black_24dp"
        android:textSize="16sp" />


</RelativeLayout>